@model Blog_Test.ViewModels.IndexViewModel

<div class="text-center">
    <h1 class="display-4">Welcome To Blog</h1>
    <table class="table">
        @foreach (var article in Model.Articles)
        {
            <tr>
                <td>
                    <h1 class="text-primary"><a href="home/details/@article.Id">@article.Title</a></h1>
                </td>
                <td><span class="text-info">Category: </span>@article.Category</td>
                <td><span class="text-info">Author: </span>@article.Author</td>
                <td>
                    <a href="home/eddit/@article.Id" class="btn-primary">Eddit</a>
                </td>
                <td>
                    <form asp-action="Delete" asp-controller="Home" asp-route-id="@article.Id" method="post">
                        <input type="submit" value="Delete" class="btn btn-primary" />
                    </form>
                </td>
            </tr>
            <tr>
            </tr>
        }
    </table>
</div>
