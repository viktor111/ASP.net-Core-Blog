@using Blog_Test.Models
@model Blog_Test.Models.Article

<h1 class="h1">Create New Blog Article</h1>
<div class="jumbotron">
    <form method="post">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control"/>
            <span asp-validation-for="Title"></span>
        </div>
        <div class="form-group">
            <label asp-for="Author"></label>
            <input asp-for="Author" class="form-control"/>
            <span asp-validation-for="Author"></span>
        </div>
        <div class="form-group">
            <select asp-for="Category" asp-items="@Html.GetEnumSelectList<CategoryType>()" class="form-control"></select>
            <span asp-validation-for="Category"></span>
        </div>
        <div class="form-group">
            <label asp-for="Content"></label>
            <textarea asp-for="Content" rows="10" cols="100" class="form-control"></textarea>
            <span asp-validation-for="Content"></span>
        </div>
        <input type="submit" name="save" value="Save" class="form-control btn btn-info"/>
    </form>
</div>