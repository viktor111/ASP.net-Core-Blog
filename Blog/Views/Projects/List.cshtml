@model Blog.ViewModels.ProjectsViewModel

@{
    ViewData["Title"] = "Projects";
}


@if (this.User.IsInRole("Admin"))
{
    <div>
        <a style="color: gold" asp-action="Create" asp-controller="Projects">Create Project</a>
    </div>
}

@foreach (var project in Model.Projects)
{

    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 text-center">
            <h3>
                <a  style="color: darkred" asp-action="Details" asp-route-id="@project.Id">
                    @project.Ttitle
                </a>
            </h3>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 text-center">
            <p>@project.Ttitle</p>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 float-left">
            <p><span style="color: lightgray">Technology: </span>@project.Technology</p>
        </div>

        @if (this.User.IsInRole("Admin"))
        {
            <div>
                <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@project.Id">Edit</a>
            </div>
            <div>
                <form asp-action="Delete" asp-route-id="@project.Id" method="post">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </div>
        }
    </div>
    <hr style="background-color: aliceblue"/>
}