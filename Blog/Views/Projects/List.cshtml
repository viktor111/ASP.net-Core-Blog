@model Blog.ViewModels.ProjectsViewModel

@{
    ViewData["Title"] = "Projects";
}


@if (this.User.IsInRole("Admin"))
{
    <div>
        <a style="color: gold" asp-action="Create" asp-controller="Projects">Create Project</a>
    </div>
}

@foreach (var project in Model.Projects)
{
    <div>
        <a asp-action="Details" asp-route-id="@project.Id">@project.Ttitle</a>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@project.Id">Edit</a>
    </div>
    <div>
        <form asp-action="Delete" asp-route-id="@project.Id" method="post">
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
    </div>
}